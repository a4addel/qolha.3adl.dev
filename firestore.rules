rules_version = '2'
service cloud.firestore {
  match /databases/{database}/documents {
   match /WORDS/{docId} {
    allow write: if true;
    allow read: if true;
    allow update: if  request.auth.token.admin == true;
    allow delete: if  request.auth.token.admin == true;
   }
   
   match /CLIPS/{docId} {
    allow write: if true;
    allow read: if true;
    allow update: if  request.auth.token.admin == true;
    allow delete: if  request.auth.token.admin == true;
   }
  }
}